<component name="PlaybackTask" extends="Task">
    <script type="text/brightscript" uri="PlaybackTask.brs"/>

    <interface>
        <!-- Read -->
        <field id="video" type="node" />
        <field id="adUrl" type="string" />
        <field id = "prerrolAdUrl" type = "string"/>
        <field id = "midrollAdUrl" type = "string"/>
        <field id = "displayMidRollAd" type = "boolean" value = "false"/>
        <field id="adFacade" type="node" />
        <field id="exitPlayback" type="boolean" alwaysNotify="true"/>

        <!-- Write -->
        <field id="playerDisposed" type="bool" />  <!-- Event to bubble up to scene -->
        <field id="truexParams" type="assocArray" />  <!-- Event to bubble up to scene -->
        <field id="truexData" type="assocArray" />  <!-- Event to bubble up to scene -->
    </interface>
</component>
