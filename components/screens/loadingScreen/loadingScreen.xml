<?xml version = "1.0" encoding = "utf-8"?>

<component name = "loadingScreen" extends = "Group">

  <interface >
    <field id = "control" type = "string" onChange = "onControlChange"/>
  </interface>

  <children >

  	<Poster 
        id     = "background" 
        width  = "1920" 
        height = "1080" 
        uri    = "pkg:/images/appIcons/splash_screen_fhd.png"/>


    <loadingIndicator 
        id  = "loadingIndicator" 
        visible = "true"/>

  </children>

  <script type = "text/brightscript" uri = "pkg:/components/screens/loadingScreen/loadingScreen.brs"/>

</component>
